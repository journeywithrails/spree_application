<%= render "shared/error_messages", :target => @order %>
<table id="cart-detail">
  <thead>
    <tr>
      <%= hook :cart_items_headers do %>
        <th colspan="2"><%= t("item") %></th>
        <th><%= t("price") %></th>
        <th>&nbsp;</th>
        <th><%= t("qty") %></th>
        <th>&nbsp;</th>
        <th><%= t("total") %></th>
        <th>&nbsp;</th>
      <% end %>
    </tr>
  </thead>
  <tbody id="line_items">
    <%= order_form.fields_for :line_items do |item_form| %>
      <%= render 'line_item', :variant => item_form.object.variant, :line_item => item_form.object, :item_form => item_form %>
    <% end %>
    <tr class="actions">
      <td colspan="4">&nbsp;</td>
      <td colspan="2">
        <button type="submit" class="css3button-ligth-blue"><%= t("update") %></button>
      </td>
      <td colspan="2">&nbsp;</td>
    </tr>
    <tr class="totals">
      <td colspan="6">&nbsp;</td>
      <td colspan="2" class="totals">
        <%= "#{t("subtotal")}: #{order_price(@order)}" %>
      </td>
    </tr>
  </tbody>
</table>
