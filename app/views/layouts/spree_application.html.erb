<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">

<!--[if lt IE 7 ]><html lang=en class="no-js ie6"><![endif]-->
<!--[if IE 7 ]><html lang=en class="no-js ie7"><![endif]-->
<!--[if IE 8 ]><html lang=en class="no-js ie8"><![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Ezeesmoke</title>

    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="/images/smokefit/favicon.png">
    <!-- Framework CSS -->
    <%= stylesheet_link_tag "screen-blueprint", :media => 'screen, projection' %>
    <%= stylesheet_link_tag "print", :media => 'print' %>
    <!--[if lt IE 8]><link rel="stylesheet" href="stylesheets/ie.css" type="text/css" media="screen, projection"><![endif]-->
    <%= stylesheet_link_tag "styles", :media => 'screen, projection' %>
    <%= stylesheet_link_tag "homepage_redesign" %>
    
    <%= stylesheet_link_tag "fancybox/jquery.fancybox-1.3.4" %>
    <%= stylesheet_link_tag "prettyPhoto" %>
    <%= yield :head %>
    
  </head>
  
  <body id="<%= @body_id || controller.controller_name %>">
    
    <div id="wrap">
      <div id="main" class="container">
          <!-- Header -->
        <div class="background-wrapper" <%= controller.controller_name.eql?("homepage") && controller.action_name.eql?("show") ? "" : "style='height: 100px;'" %>>
          <div id="background" class="span-24 last <%= root_controller? %>">
            <div id="navigation" class="span-18 push-6 last">
              <div class="span-13">
                <ul class="horizontal header-menu">
                  <li class="first"><a href="#">.</a></li>
                  <li><%= link_to "Your Store", products_path, :class => "active" %></li>
                  <li><a href="/refills" class="active">Your Refills</a></li>
                  <li><a href="/how_it_works" class="active">How it works</a></li>
                  <li><a href="http://ezeesmoke.tumblr.com/" class="active">In the News</a></li>
                  <li><a href="/testimonials" class="active last">Testimonials</a></li>
                  <li class="last"><a href="#">.</a></li>
                </ul>
              </div>
              <div class="span-5 last header-contact">
                <span class="phone">1-(903)-231-3933</span>
                <br>
                <ul class="horizontal user-nav">
                  
                  <% if current_user %>
                    <li><%= link_to t('my_account'), account_path %></li>
                    <li>|</li>
                    <li><%= link_to t('logout'), destroy_user_session_path %></li>
                  <% else %>
                    <li><%= link_to t('log_in'), login_path%></li>
                    <li>|</li>
                    <li><%= link_to_cart %></li>
                  <% end %>
                </ul>
              </div>
            </div>
            <div id="header">
              <div id="header-logo">
                <%= link_to "", root_url %>
              </div>
              <div id="header-body"></div>
              <div id="header-end"></div>
            </div>
            
            <%#= yield :inside_header %>
            
          </div>
          <%= yield :inside_header %>
        </div>  
          <hr class="space">
          
          <% if flash.notice || flash[:error] %>
            <div class="span-24 last">
              <% if flash.notice%>
                <div class="flash notice"><%= flash.notice %></div>
              <% end %>
              <% if flash[:error] %>
                <div class="flash errors"><%= flash[:error] %></div>
              <% end %>
            </div>
          <% end %>


        <!-- content -->
          <div class="span-24 last">
            
            <%= yield %>
            
          </div>
        <!-- end for content -->
      </div>
    </div>
    <hr class="space">
    <!-- footer -->
    
    <%= render :partial => "shared/footer" %>
    <%= javascript_include_tag 'jquery-1.4.2.min', 'jquery.validate.min.js', 'rails', 'application', :cache => 'jquery-core' %>
    
    <%= javascript_include_tag 'fancybox/jquery.mousewheel-3.0.4.pack', 'fancybox/jquery.fancybox-1.3.4.pack', 'easySlider1.7', 'jquery.prettyPhoto' %>
    
    <%= yield :javascripts %>
    
  </body>
</html>